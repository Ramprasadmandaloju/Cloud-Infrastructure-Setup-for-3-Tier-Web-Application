pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/3-tier-web-app.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
                // Optional: docker build -t myapp:latest .
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application to EC2...'
                // Example: sh 'docker run -d -p 80:80 myapp:latest'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
