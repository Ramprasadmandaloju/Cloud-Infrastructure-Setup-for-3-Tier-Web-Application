pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/3-tier-web-app.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application to EC2...'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}